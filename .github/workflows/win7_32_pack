name: Build for Windows 7 32-bit

on:
  workflow_dispatch:  # 允许手动触发
  push:
    branches: [ main ]

jobs:
  build:
    runs-on: windows-latest  # 构建环境，不影响目标平台

    steps:
      - uses: actions/checkout@v4

      - name: Set up Go
        uses: actions/setup-go@v5
        with:
          go-version: '1.20'

      - name: Build Windows 32-bit EXE (for Win7)
        run: |
          $env:GOOS="windows"
          $env:GOARCH="386"        # ← 关键：32 位架构
          $env:CGO_ENABLED="0"
          go build -o wechat-proxy.exe .
        shell: pwsh

      - name: Upload Artifact
        uses: actions/upload-artifact@v4
        with:
          name: wechat-proxy-win7-32bit
          path: wechat-proxy.exe
